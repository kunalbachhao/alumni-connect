<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentorship Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/mentor-admin.css">
</head>
<body class="bg-gray-50 font-sans text-gray-800">
    <header class="mb-8 flex justify-between items-center">
  <div class="flex items-center space-x-4">
    <!-- Hamburger (only visible on mobile) -->
    <button id="menuToggle" class="lg:hidden text-3xl text-gray-600 hover:text-blue-600">
      &#9776;
    </button>
    <h1 class="text-4xl font-extrabold" id="pageTitle">Dashboard</h1>
  </div>
  <p class="text-lg text-gray-500 hidden sm:block" id="pageSubtitle">
    A centralized view of your mentorship program.
  </p>
</header>

    <div class="flex h-screen">
        <aside class="w-64 bg-white p-6 shadow-md rounded-r-2xl">
            <div class="text-2xl font-extrabold text-blue-600 mb-8">Admin Panel</div>
            <nav>
                <ul class="space-y-2">
                    <li><a href="#" class="nav-item active" data-tab="mentors">Manage Mentors</a></li>
                    <li><a href="#" class="nav-item" data-tab="sessions">Session History</a></li>
                    <li><a href="#" class="nav-item" data-tab="feedback">Review Feedback</a></li>
                    <li><a href="#" class="nav-item" data-tab="analytics">Analytics</a></li>
                </ul>
            </nav>
            <div class="mt-8 p-3 bg-gray-100 rounded-lg text-sm text-gray-500">
                <p class="font-bold">Admin ID:</p>
                <p id="userIdDisplay" class="truncate font-mono text-xs"></p>
            </div>
        </aside>

        <main class="flex-1 p-8 overflow-y-auto">
            <header class="mb-8">
                <h1 class="text-4xl font-extrabold" id="pageTitle">Dashboard</h1>
                <p class="text-lg text-gray-500" id="pageSubtitle">A centralized view of your mentorship program.</p>
            </header>

            <div id="loading" class="flex justify-center items-center h-full">
                <svg class="animate-spin -ml-1 mr-3 h-10 w-10 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </div>

            <section id="mentors" class="dashboard-tab">
                <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" id="mentorsList">
                    </div>
            </section>
            
            <section id="sessions" class="dashboard-tab hidden">
                <div class="bg-white p-6 rounded-2xl shadow-sm">
                    <h2 class="text-2xl font-bold mb-4">All Sessions</h2>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Session ID</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mentor</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mentee</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Topic</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200" id="sessionsTableBody">
                                </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <section id="feedback" class="dashboard-tab hidden">
                <div class="space-y-4" id="feedbackList">
                    </div>
            </section>

            <section id="analytics" class="dashboard-tab hidden">
                <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                    <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
                        <p class="text-lg text-gray-500">Total Mentors</p>
                        <p id="totalMentorsCount" class="text-4xl font-bold mt-2 text-blue-600">0</p>
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
                        <p class="text-lg text-gray-500">Total Sessions</p>
                        <p id="totalSessionsCount" class="text-4xl font-bold mt-2 text-blue-600">0</p>
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-sm text-center">
                        <p class="text-lg text-gray-500">Average Rating</p>
                        <p id="averageRating" class="text-4xl font-bold mt-2 text-yellow-500">0</p>
                    </div>
                </div>

                <div class="grid gap-6 md:grid-cols-2 mt-6">
                    <div class="bg-white p-6 rounded-2xl shadow-sm">
                        <h2 class="text-2xl font-bold mb-4">Popular Mentors</h2>
                        <ul id="popularMentorsList" class="space-y-3">
                            </ul>
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-sm">
                        <h2 class="text-2xl font-bold mb-4">Session Status</h2>
                        <ul id="sessionStatsList" class="space-y-3">
                             </ul>
                    </div>
                </div>
            </section>

            <div id="messageBox" class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white p-6 rounded-xl shadow-2xl z-50 transition-all duration-300 hidden">
                <p id="messageText" class="text-lg mb-4 text-center"></p>
                <div class="flex justify-center space-x-4">
                    <button id="okBtn" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">OK</button>
                    <button id="cancelBtn" class="hidden bg-gray-300 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-400 transition-colors">Cancel</button>
                </div>
            </div>
        </main>
    </div>
    
    <aside id="previewSidebar" class="preview-sidebar hidden">
        <div class="flex justify-end">
            <button id="closeSidebarBtn" class="text-2xl text-gray-500 hover:text-gray-800 transition-colors">&times;</button>
        </div>
        <div id="sidebarContent" class="mt-4">
            </div>
    </aside>

    <script type="module" src="/javascripts/mentor-admin.js"></script>
</body>
</html>